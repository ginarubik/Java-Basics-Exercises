package hu.progmasters.javastart.module_01.day3_strings.gyakorlatok;

public class StringType {

    public static void main(String[] args) {

        // Definiálj prefix néven egy String típusú változót, és add neki értékül, hogy "Hello "!
        String prefix = "Hello ";

        // Definiálj name néven egy String típusú változót, és add neki értékül, hogy "John Doe"!
        String name = "John Doe";

        // Definiálj egy message változót, mely az előző két változó, összefűzve.
        String message = prefix + name;

        // A message változó értékét írd felül úgy, hogy hozzákapcsolod még a 444 számot
        message = message + 444;

        // Hozz létre egy logikai változót, ami tartalmazza azt, hogy a message értéke "Hello John Doe"-e!
        boolean isHelloJohnDoe = message.equals("Hello John Doe");

        // Hozz létre egy másik logikai változót, ami tartalmazza azt,
        // hogy a message értéke megegyezik-e a "Hello John Doe444" értékkel!
        boolean isHelloJohnDoe444 = message.equals("Hello John Doe444");

        // Konkatenálj össze két üres String-et, és írd ki az értékét! Hány karakter hosszú lesz?
        String emptyConcat = "" + "";
        System.out.println(emptyConcat);
        System.out.println(emptyConcat.length());

        // Írd ki külön sorban, külön utasításokban a következőket:
        String text = "Abcde";

        // Az "Abcde" String hossza
        System.out.println(text.length());

        // Az első és harmadik karaktere (0-tól indexelünk) vesszővel elválasztva
        System.out.println(text.charAt(0) + "," + text.charAt(2));

        // Az elsőtől a harmadik karakterig tartó részlete
        System.out.println(text.substring(0, 3));
    }
}
