import java.util.Scanner;

public class A_PositiveOrNegative {
    public static void main(String[] args) {

        /*
        Írj egy programot, ami bekér egy egész számot (int) Scanner segítségével
        és eldönti, hogy a kapott szám pozitív, negatív, vagy nulla.
         */

        Scanner scanner = new Scanner(System.in);

        System.out.print("Adj meg egy egész számot: ");
        int number = scanner.nextInt();

        if (number > 0) {
            System.out.println("A szám pozitív.");
        } else if (number < 0) {
            System.out.println("A szám negatív.");
        } else {
            System.out.println("A szám nulla.");
        }
    }
}
